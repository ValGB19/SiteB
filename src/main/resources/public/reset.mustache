{{>../public/header}}
<title>Cambiar contraseña | PRODE</title>
<div class="container-fluid">
	<div class="row">
		<div class="Contenedor" align="center"  style="width: 700px;">
			<font color="Olive" face="Comic Sans MS,arial">
				<h1 align="center" style="margin-top: 15px"><i><u>Restablecer Contraseña</u></i></h1>
			</font>
			<div class="input-group">
				<div class="input-group-prepend">
					<form method="post" action="/reset" id="form-registro" name="form-registro">
					<input id="action" hidden name="action" value="checkUser">
					<label for="resetID" class="input-group-text">Nombre de Usuario o Email</label>
				</div>
				<input id="resetID" name="resetID" type="text" class="form-control" required placeholder="example123">
			</div>
			<br>
			<div class="input-group">
				<div class="input-group-prepend">
					<label for="seguro" class="input-group-text">Palabra de seguridad</label>
				</div>
				<input id="seguro" name="seguro" type="text" class="form-control" required placeholder="example">
			</div>
			<br>
			<div class="input-group">
				<div class="input-group-prepend">
					<label for="pswReset" class="input-group-text">Contraseña</label>
				</div>
				<input id="psw" name="psw" type="password" class="form-control" placeholder="******" aria-describedby="sizing-addon1" required>
			</div>
			<br>
			<div class="input-group">
				<div class="input-group-prepend">
					<label for="passValid" class="input-group-text">Confirmar Contraseña</label>
				</div>
				<input id="pswReset" name="pswReset" type="password" class="form-control" placeholder="******" aria-describedby="sizing-addon1" required>
			</div>
			<br>
			<button class="btn btn-lg btn-primary btn-block btn-signin" id="confirmReset" type="submit">Confirmar</button>
			<br>
			<button class="btn btn-lg btn-primary btn-block btn-signin" id="return" type="submit" onclick="location.href = '/'">Volver</button>
			<br>
			<div>{{messageReset}}</div>
			<br>			
		</div>
	</div>
</div>

<script type="text/javascript"> 
	var password = document.getElementById("psw")
	  , confirm_password = document.getElementById("pswReset");

	function validatePassword(){
	  if(password.value != confirm_password.value) {
	    confirm_password.setCustomValidity("Las contraseñas no coinciden");
	  } else {
	    confirm_password.setCustomValidity('');
	  }
	}

	password.onchange = validatePassword;
	confirm_password.onkeyup = validatePassword;
</script> 
{{>../public/footer}}