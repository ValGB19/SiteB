{{>../public/header}}
<title>Mi Perfil | PRODE</title>
<div class="container-fluid">
	<div class="row" align="left">
		<div id="Contenedor" style="margin: 50px auto;margin-top: 0px;">
			<div class="form-group">
				<div class="Contenedor" style="width: 400px;" class="form-group" align="center">
					<br>
					<h3><u> MI PERFIL</u></h3>
					<br>
					<img src="/club9_car3.png" width="100" height="100"/>
					<br>
					<br>
					<p><b><font size="4">Bienvenido <i>{{name}} {{surname}}!</i></font></b></p>
					<p><b><font size="4"><u><font color="green">Fixtures jugados:</font></u> {{totalFixtures}} </font></b></p>
					<p><b><font size="4"><u><font color="green">Predicciones realizadas:</font></u> {{totalPredictions}}</font></b></p>
				</div>
				<div align="center">
					<div class="form-group">
						<div class="btn-group float-right mt-2" align="justify">
				 			<button type="button" class="btn btn-danger" onclick="location.href ='/loged/prode'">APOSTAR</button>
				  		<button type="button" class="btn btn-danger"  onclick="location.href ='/results'">Ver resultados</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="Contenedor" style="width: 700px;" align="center">
			<div class="form-group">
				<br>
				<font color="Olive" face="Comic Sans MS,arial">
					<h1 align="center"><i>Mis Jugadas</i></h1>
				</font>
				<br>
				<table id="customers">
				  <tr>
					<th>Fixture</th>
					<th>Fecha</th>
					<th>Mi Puntaje</th>
				  </tr>
				  {{#predUser}}
				  <tr>
				  	{{#.}}
					<td>{{.}}</td>
					{{/.}}
				  </tr>
				  {{/predUser}}
				</table>
			</div>
		</div>
	</div>
</div>
{{>../public/footer}}
